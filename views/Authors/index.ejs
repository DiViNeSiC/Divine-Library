<h2 class="page-header">Search Authors</h2>
<form action="/authors" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" value="<%= searchOptions.name %>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="button button-success" type="submit">Search</button>
    </div>
</form>
<div class="authors-flex">
    <% authors.forEach(author => { %>
        <div class="author-container">
            <div class="author-name"><%= author.name %></div>
            <div class="button-row  button-media-column">
                <div class="button-row button-media-links">
                    <a class="button button-primary" href="/authors/<%= author.id %>">View</a>
                    <a class="button button-primary" href="/authors/<%= author.id %>/edit">Edit</a>
                </div>
                <%- include('../partials/deleteForm', { url: `/authors/${author.id}` }) %>
            </div>
        </div>
    <% }) %>
</div>