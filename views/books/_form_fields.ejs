<div class="form-row">
    <div class="form-item">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= book.title %>" id="title" required>
    </div>
    <div class="form-item">
        <label for="author">Author</label>
        <select name="author" id="author">
            <% authors.forEach(author => { %>
                <% if (author.id === book.author) { %>
                    <option selected value="<%= author.id %>" label="<%= author.name %>">
                <% } else { %>
                    <option value="<%= author.id %>" label="<%= author.name %>">
                <% } %>
            <% }) %>
        </select>
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label for="publishDate">Publish Date</label>
        <input 
            type="date" 
            name="publishDate" 
            value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0]%>" 
            id="publishDate" 
            required
        >
    </div>
    <div class="form-item">
        <label for="pageCount">Page Count</label>
        <input type="number" name="pageCount" value="<%= book.pageCount %>" id="pageCount" min="1">
    </div>
</div>
<div class="form-row form-item-cover">
    <div class="form-item form-item-no-grow">
        <label for="cover">Cover</label>
        <input type="file" name="cover" id="cover" class="book-cover filepond">
    </div>
    <div class="form-item form-item-description">
        <label for="description">Description</label>
        <textarea name="description" id="description"><%= book.description %></textarea>
    </div>
</div>