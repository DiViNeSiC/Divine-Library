<h2 class="page-header"><%= book.title %></h2>
<div class="book-view">
    <div class="book-pic-btn">
        <img class="book-cover" src="<%= book.coverImagePath %>" height="150px" width="100px" alt="err">
        <div class="book-button-grid">
            <a class="button button-primary" href="/books/<%= book.id %>/edit">Edit</a>
            <%- include('../partials/deleteForm.ejs', {
                url: `/books/${book.id}`
            }) %>
            <a class="button button-primary book-button-view-author" href="/authors/<%= book.author.id %>">View Author</a>
        </div>
    </div>
    <div class="book-info-grid">
        <div class="book-info-label">Author:</div>
        <div class="book-info-label-answer"><%= book.author.name %></div>
        <div class="book-info-label">Publish Date:</div>
        <div class="book-info-label-answer"><%= book.publishDate.toDateString() %></div>
        <div class="book-info-label">Page Count:</div>
        <div class="book-info-label-answer"><%= book.pageCount %></div> 
        <div class="book-info-label">Description:</div>
        <div class="book-info-label-answer"><%= book.description %></div>
    </div>
</div>
